<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering the feeling/mood -->
    <EditText
        android:id="@+id/editFeeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your mood or feeling"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Button to search for songs based on the entered mood -->
    <Button
        android:id="@+id/btnSearchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Songs"
        android:layout_marginTop="16dp"

        android:textColor="#FFFFFF"
        android:padding="16dp" />

</LinearLayout>
